@page
@model Web.Pages.FamilyHeadDetailsModel

@{
    Layout = "_Layout2";
    var Activate = TempData["Activate"] as bool?;
}
@if (TempData["Message"] != null)
{
    <div class="alert ">
        @TempData["Message"]
    </div>
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .user-details-container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .activate-button {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            font-weight: bold;
        }

        .user-details-container p {
            font-size: 16px;
            margin-bottom: 8px;
        }

            .user-details-container p strong {
                font-weight: bold;
            }

        media (max-width: 576px) {
            .user-details-container

        {
            padding: 15px;
        }

        .user-details-container p {
            font-size: 14px;
        }

        .activate-button {
            font-size: 14px;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="user-details-container mt-5">
            <h3>Name: @Model.detail.FirstName @Model.detail.LastName</h3>
            <p><strong>NIN:</strong> @Model.detail.Nin</p>
            <p><strong>Role:</strong> @Model.detail.Role</p>
            <p><strong>Postal Code:</strong> @Model.detail.PostalCode</p>
            <p><strong>Phone Number:</strong> @Model.detail.PhoneNumber</p>
            <p><strong>City:</strong> @Model.detail.City</p>
            <p><strong>Email:</strong> @Model.detail.Email</p>
            <p><strong>Address:</strong> @Model.detail.Address</p>
            <p><strong>Local Government:</strong> @Model.detail.LOcalGovernment</p>
            <p><strong>Number of Persons:</strong> @Model.detail.NumberOfPersons</p>
            <p><strong>Donations Donated:</strong> @Model.detail.DonationsDonated</p>
            <p><strong>Donations Received:</strong> @Model.detail.DonationsReceived</p>
            <form method="post" asp-asp-route-userId="@Model.detail.UserId">
                <button class="btn btn-primary activate-button">
                    @if ((bool)Activate)
                    {
                        <p>Deactivate User</p>
                    }
                    else
                    {
                        <p>Activate User</p>
                    }
                </button>
           </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>