@page
@model Web.Pages.DonationReviewModel
@{
    var baseUrl = "https://localhost:7005";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .review-container {
            margin-top: 50px;
        }
        .review-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            overflow: hidden;
        }
        .review-card img {
            max-height: 200px;
            width: 100%;
            object-fit: cover;
        }
        .review-card-body {
            padding: 20px;
        }
        .review-card-body h5 {
            margin-bottom: 10px;
            color: #007bff;
            font-weight: bold;
        }
        .review-card-body p {
            margin-bottom: 10px;
            color: #555;
        }
        .review-card-body small {
            color: #888;
        }
        .card-footer {
            background-color: #f1f1f1;
            padding: 10px;
            text-align: right;
        }
    </style>
</head>
<body>

<div class="container review-container">
    <div class="row">
        @if (Model.reviewModel != null && Model.reviewModel.Any())
        {
            @foreach (var review in Model.reviewModel)
            {
                <div class="col-md-6">
                    <div class="card review-card">
                        <img src="@($"{baseUrl}{review.PrimaryImageUrl}")" alt="Donation Image" class="card-img-top">
                        <div class="card-body review-card-body">
                            <h5 class="card-title">Food Details: @review.FoodDetails</h5>
                            <p class="card-text">Quantity: @review.Quantity</p>
                            <p class="card-text">Expiration Date: @review.ExpirationDate.ToString("yyyy-MM-dd")</p>
                            <p class="card-text">PickUp Location: @review.PickUpLocation</p>
                            <p class="card-text">Review: @review.Review</p>
                        </div>
                        <div class="card-footer">
                            <small>Recipient: @review.RecipientName (@review.RecipientEmail)</small>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted">No reviews available at the moment.</p>
            </div>
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

