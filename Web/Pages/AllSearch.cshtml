@page
@model Web.Pages.AllSearchModel
@{
    Layout = "_Layout2";
}
<style>
    .card {
        border-radius: 10px;
    }

    .card-title {
        font-weight: bold;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Search for Donations</h4>

                    <form method="get" asp-page="/AllSearchResult">
                        <div class="form-group">
                            <label for="location">Location</label>
                            <input type="text" class="form-control" id="location" name="location" placeholder="Enter location">
                        </div>

                        <div class="form-group">
                            <label for="minQuantity">Minimum Quantity</label>
                            <input type="number" class="form-control" id="minQuantity" name="minQuantity" placeholder="Enter minimum quantity">
                        </div>

                        <div class="form-group">
                            <label for="maxQuantity">Maximum Quantity</label>
                            <input type="number" class="form-control" id="maxQuantity" name="maxQuantity" placeholder="Enter maximum quantity">
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
