<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Connect Navbar</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: #f8f9fa; /* Light background for contrast */
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar-nav .nav-item .nav-link {
            color: #000; /* Black text color for better visibility */
            padding: 15px;
        }

            .navbar-nav .nav-item .nav-link:hover {
                color: #007bff; /* Change color on hover for a nice effect */
            }

        .dropdown-menu a {
            color: #333;
        }

        .notification-bell {
            position: relative;
            font-size: 20px;
            cursor: pointer;
        }

            .notification-bell .badge {
                position: absolute;
                top: -5px;
                right: -10px;
                background: red;
                color: white;
                border-radius: 50%;
                padding: 5px 8px;
                font-size: 10px;
            }

        footer {
            background-color: #f8f9fa;
            padding: 20px;
            position: relative;
            bottom: 0;
            width: 100%;
            text-align: center;
        }

        .ftco-footer-widget {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">Food Connect</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
                <!-- Dropdown for Profile -->
                <li class="nav-item">
                    <a class="nav-link" asp-page="/ViewProfile">Profile</a>
                </li>
                <!-- Donate Food Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="donateFoodDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Donate Food
                    </a>
                    <div class="dropdown-menu" aria-labelledby="donateFoodDropdown">
                        <a class="dropdown-item" asp-page="/CreateDonation">Make a Donation</a>
                        <a class="dropdown-item" asp-page="/ViewDonationCategory">View Donations</a>
                    </div>
                </li>
                <!-- Other Navigation Items -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="donationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Receive Food Donation
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="donationsDropdown">
                        <li><a class="dropdown-item" asp-page="/ReceiveFoodDonation">All Donations</a></li>
                        <li><a class="dropdown-item" asp-page="/ClaimableDonations">Claimable Donations</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="donateFoodDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Track Food Donation
                    </a>
                    <div class="dropdown-menu" aria-labelledby="donateFoodDropdown">
                        <a class="dropdown-item" asp-page="/RecipientClaimedDonation">Donation Sent</a>
                        <a class="dropdown-item" asp-page="/DonorClaimedDonations">Receiving Donations</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/DonationReview">View Review</a>
                </li>
                
                <li class="nav-item">
                    <a class="nav-link search-icon" asp-page="/Search">
                        <i class="fas fa-search"></i>
                    </a>
                </li>
                @* <li class="nav-item">
                    <a class="nav-link notification-bell" asp-page="/Notificatio">
                        <i class="fas fa-bell"></i>
                        <span class="badge"></span>
                    </a>
                </li> *@

                <li class="nav-item">
                    <a class="nav-link" asp-page="/Logout">LogOut</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container" style="flex: 1;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="ftco-footer ftco-section img">
