@page
@model Web.Pages.RegistrationSuccessModel
@{
    Layout = null;
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

<style>
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
    }

    .success-container {
        background-color: #fff;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .success-container i {
            font-size: 100px;
            color: #28a745;
        }

        .success-container h1 {
            color: #28a745;
            font-size: 2.5rem;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .success-container p.lead {
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        .success-container a.btn {
            margin-top: 10px;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            text-decoration: none;
            color: #fff;
        }

        .success-container a.btn-primary {
            background-color: #007bff;
            border: none;
        }

            .success-container a.btn-primary:hover {
                background-color: #0056b3;
            }
</style>

<div class="container success-container">
    <!-- Success Icon -->
    <i class="fas fa-check-circle"></i>

    <!-- Success Message -->
    <h1>Registration Successful!</h1>
    <p class="lead">A Link Has Been Sent To Your Mail. Ensure You Confirm Your Mail Before Logging In.</p>

    <!-- Additional Info -->
    <p>You Can Only Log In After Confirming Your Mail. THANK YOU.</p>

    <!-- Action Buttons -->
    <a asp-page="/UserDashboard" class="btn btn-primary">Go to Homepage</a>
    <a asp-page="/login" class="btn btn-primary">Go To Login</a>
</div>

