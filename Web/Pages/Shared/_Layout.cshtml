    <script src="~/Template/js1/jquery.min.js"></script>
    <script src="~/Template/js1/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/Template/js1/popper.min.js"></script>
    <script src="~/Template/js1/bootstrap.min.js"></script>
    <script src="~/Template/js1/jquery.easing.1.3.js"></script>
    <script src="~/Template/js1/jquery.waypoints.min.js"></script>
    <script src="~/Template/js1/jquery.stellar.min.js"></script>
    <script src="~/Template/js1/owl.carousel.min.js"></script>
