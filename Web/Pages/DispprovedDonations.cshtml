@* @page
@model Web.Pages.DispprovedDonationsModel

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pending Donations</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        .donation-card {
            position: relative;
            border: none;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            overflow: hidden;
        }

            .donation-card img {
                width: 100%;
                height: auto;
                max-height: 200px;
                object-fit: cover;
                border-radius: 10px 10px 0 0;
            }

        .donation-status {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: yellow;
            color: #333;
            padding: 5px 10px;
            font-weight: bold;
            border-radius: 5px;
        }

        .donation-details {
            padding: 15px;
        }

            .donation-details h5 {
                color: #333;
                font-weight: bold;
            }

            .donation-details p {
                color: #555;
                margin-bottom: 10px;
            }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center mb-4">Disapproved Donations</h2>
        <div class="row">
            @foreach (var donation in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card donation-card">
                        <div class="donation-status">
                            @donation.Status
                        </div>
                        <img src="@donation.PrimaryImageUrl" alt="Donation Image">
                        <div class="donation-details">
                            <h5>@donation.FoodDetails</h5>
                            <p><strong>Quantity:</strong> @donation.Quantity</p>
                            <p><strong>Expiration Date:</strong> @donation.ExpirationDate.ToShortDateString()</p>
                            <p><strong>Pick-Up Time:</strong> @donation.PickUpTime.ToString("hh:mm tt")</p>
                            <p><strong>Pick-Up Location:</strong> @donation.PickUpLocation</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>



 *@